{
  "version": 2,
  "name": "sumopower-website",
  "outputDirectory": ".",
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "pages/**", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/products", "dest": "/pages/products.html" },
    { "src": "/about", "dest": "/pages/about.html" },
    { "src": "/technology", "dest": "/technology.html" },
    { "src": "/", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
