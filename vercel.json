{
  "version": 2,
  "name": "sumopower-website",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/products", "destination": "/pages/products.html" },
    { "source": "/about", "destination": "/pages/about.html" },
    { "source": "/technology", "destination": "/technology.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
